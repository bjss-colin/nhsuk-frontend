

  <nav role="navigation" class="nhsuk-nav-sideways 
  {%- if params.classes %} {{ params.classes }}{% endif %}" {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
    <h2 class="nhsuk-u-font-size-24">
      More in
      <a href="{%- if params.href %}{{ params.href }}{% else %}#{% endif %}">
        {{ params.heading }}
      </a>
    </h2>
    <ul class="nhsuk-nav-sideways__list">
      {%- for item in params.items %}
        {%- if item.active %}
          <li class="nhsuk-nav-sideways__item is-active" aria-current="page">
            {{ item.text }}
          </li>
        {%- else %}
          <li class="nhsuk-nav-sideways__item">
            <a class="nhsuk-nav-sideways__link" href="{{ item.href }}">
              {{ item.text }}
            </a>
          </li>
        {%- endif %}
      {%- endfor %}
    </ul>
  </nav>
